QWidget {
    background-color: #ffffff;
    font-family: Arial, sans-serif;
    font-size: 16px;
    color: #333;
}

QPushButton {
    background-color: #007bff;
    color: white;
    border-radius: 5px;
    padding: 10px;
}

QPushButton:hover {
    background-color: #0056b3;
}

QScrollBar:vertical {
    background-color: #add8e6;
    width: 4px;
}

QScrollBar::handle:vertical {
    background: #007bff;
}
